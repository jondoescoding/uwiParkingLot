<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserdataActivity">


    <View
        android:id="@+id/view"
        android:layout_width="424dp"
        android:layout_height="191dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userdata_img_profileimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:src="@drawable/profileplaceholder"
        android:visibility="visible"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="61dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/userdata_btn_uploadpic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:text="UPLOAD PICTURE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/userdata_edit_user"
        app:layout_constraintEnd_toEndOf="@+id/userdata_img_profileimg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/userdata_img_profileimg"
        app:layout_constraintTop_toBottomOf="@+id/userdata_img_profileimg" />

    <EditText
        android:id="@+id/userdata_edit_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/userdata_edit_email"
        app:layout_constraintEnd_toEndOf="@+id/userdata_btn_uploadpic"
        app:layout_constraintStart_toStartOf="@+id/userdata_btn_uploadpic"
        app:layout_constraintTop_toBottomOf="@+id/userdata_btn_uploadpic" />

    <EditText
        android:id="@+id/userdata_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/userdata_edit_phoneno"
        app:layout_constraintEnd_toEndOf="@+id/userdata_edit_user"
        app:layout_constraintStart_toStartOf="@+id/userdata_edit_user"
        app:layout_constraintTop_toBottomOf="@+id/userdata_edit_user" />

    <EditText
        android:id="@+id/userdata_edit_phoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/userdata_btn_done"
        app:layout_constraintEnd_toEndOf="@+id/userdata_edit_email"
        app:layout_constraintStart_toStartOf="@+id/userdata_edit_email"
        app:layout_constraintTop_toBottomOf="@+id/userdata_edit_email" />

    <Button
        android:id="@+id/userdata_btn_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:text="DONE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/userdata_edit_phoneno"
        app:layout_constraintStart_toStartOf="@+id/userdata_edit_phoneno"
        app:layout_constraintTop_toBottomOf="@+id/userdata_edit_phoneno" />


</androidx.constraintlayout.widget.ConstraintLayout>




